<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>

    <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

  </head>

  <!-- <h4><%=link_to 'Browse Startup ideas', ideas_path %></h4> | -->
  <!-- <h4><%= link_to 'Create New Idea', ideas_path %> </h4>  |------------------------------------------------------------------------------------------------ -->




<body class ="container-fluid">

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

    <div class="row">
        <div class="col col-8">
          <%=link_to 'Browse Startup ideas', ideas_path, class: "browse" %>
        </div>
        <%if @current_user.present? %>
        <div class="col col-4">
         <%= link_to 'Logout', login_path, method: 'delete', class: "logout"  %>

          <%= link_to 'profile', user_path(@current_user), class: "profile" %>
        </div>
      <div class="row">
        <div class="col col-12">
          <div class = "welcome">
            &nbsp;&nbsp;&nbsp;Welcome back, <%= @current_user.username %>
          </div>
        </div>
      </div>
      <% else %>
      <div class="col col-12">
        <%= link_to 'login', login_path,  class: "login" %>
        <%= link_to 'signup', new_user_path, class: "signup" %>
      </div>
      <% end %>
      </div>
    </div>
  </nav>
  <br>
  <%= yield %>



</body>
</html>
